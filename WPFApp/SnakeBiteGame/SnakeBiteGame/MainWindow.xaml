<Window x:Class="SnakeBiteGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeBiteGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image Stretch="Fill" Source="main.png" />
        <TextBlock Text="Snake Bite Game" FontSize="30" 
                   FontWeight="ExtraBold" Foreground="White"
                   HorizontalAlignment="Center" Margin="26,60,486,271" Width="280" />
        <Button x:Name="BtnPlay" Click="BtnPlay_Click"   
            Content="Play" Width="200" Height="50" Margin="120,300,470,65" FontSize="20"/>
        <Button x:Name="BtnExit" Click="BtnExit_Click" 
            Content="Exit" Width="200" Height="50" Margin="460,300,130,65" FontSize="20"/>
    </Grid>
</Window>
